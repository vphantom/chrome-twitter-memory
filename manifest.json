{
  "manifest_version": 2,
  "name": "Timeline refresh and memory for Twitter",
  "short_name": "Refresher",
  "version": "0.1.2",
  "version_name": "0.1.2 alpha",
  "description": "Refresh timeline automatically and scroll to last seen tweet",
  "icons": {
    "16": "icons/bird_flying_16.png",
    "48": "icons/bird_flying_48.png",
    "128": "icons/bird_flying_128.png"
  },
  "author": "St√©phane Lavergne",
  "homepage_url": "https://github.com/vphantom/chrome-twitter-memory",
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "watcher.js"
      ],
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "http://twitter.com/*",
    "https://twitter.com/*"
  ]
}
